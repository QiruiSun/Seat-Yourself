<h1>Reservations</h1>

<%= form_tag(restaurant_path, :method => "get", class: "navbar-form", id: "search-form") do %>
<div class="input-append">
  <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
  <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
  of using a Rails form helper -->
  <button class="btn" type="submit"><i class="icon-search"></i></button>
</div>

<ol>
<% @reservations.each do |r| %>
   <li>
    <div class="list_reservations">

    Reservation time: <%= r.time.strftime("%A, %d %b %Y %l:%M %p") %> <br>
    Party_size: <%= r.party_size %> <br>
    Restaurant: <%= r.restaurant.name %> <br>
    Restaurant Address: <%= r.restaurant.address %> <br>
    <br>

    </div>
  </li>
<% end %>
</ol>
