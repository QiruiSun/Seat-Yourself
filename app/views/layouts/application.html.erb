<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <img class="logo" src="/images/drawing.png" />
    <nav>
      <ul>
        <li>Sign up</li>
        <li>Log in</li>
      </ul>
    </nav>
  </header>
  <% if flash[:notice] %>
    <p><%= flash[:notice]  %></p>
  <% end %>
  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>


<%= yield %>

</body>
</html>
