<h1>Restaurants</h1>

<% if current_user %>
  <%= link_to "My Profile", users_path%> <br>
<% end %>
<br>

<%= form_tag(restaurants_path, :method => "get") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Restaurants" %>
    <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
    of using a Rails form helper -->
    <button class="btn" type="submit"><i class="icon-search"></i></button>
  </div>
<% end %>


<% @restaurant_search.each do |r| %>
  <b>
    <div class="search-results">
      Restaurant Name: <%= link_to "#{r.name}", restaurant_path(r.id) %><br>
      <%= r.address %> <br>
      <%= r.summary %> <br>
      <%= r.open_hour %> am -<%= r.close_hour %> pm<br>

      <p>$<%= r.price_range %></p>
    </div>
  </b>
<% end %>
