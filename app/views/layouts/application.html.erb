<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body >




  <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("/images/drawing.png"), restaurants_url %>
     <div class="navbar-right" style="padding-top:5%;">
       <% if current_user %>
       <%= link_to "My Profile", users_path%> <br>
       <% end %>
    <p>
      <% if current_user %>
        <div class="sign_in_info">Signed in as <%=  current_user.email %>. <br></div>

        <%= link_to "Log out", logout_path %>
      <% else %>
        <%= link_to "Log in", login_path %> or <%= link_to "Sign up", new_user_path %>

       <% end %>
      </p>
    </div>
  </div>



</header>

  <% if flash[:notice] %>
    <p><%= flash[:notice]  %></p>
  <% end %>
  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>


<%= yield %>



</body>
</html>
