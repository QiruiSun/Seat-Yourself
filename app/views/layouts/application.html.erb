<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:notice] %>
    <p><%= flash[:notice]  %></p>
  <% end %>
  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>


<%= yield %>

  <div class="user_info">
    <p>
      <% if current_user %>
        Signed in as <%=  current_user.email %>. <br>
        <%= link_to "Log out", logout_path %>
      <% else %>
        <%= link_to "Log in", login_path %> or <%= link_to "Sign up", new_user_path %>

      <% end %>
    </p>
   </div>

</body>
</html>
