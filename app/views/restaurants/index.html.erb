<h1>Restaurants</h1>

<% if current_user %>
<%= link_to "My Profile", users_path%> <br>
<% end %>
<br>



<% @restaurants.each do |r| %>
<div class="list_restaurants">
  Restaurant Name: <%= link_to "#{r.name}", restaurant_path(r.id) %><br>
  <%= r.address %> <br>
  <%= r.summary %> <br>
  <%= r.open_hour %> am -<%= r.close_hour %> pm<br>

  <p>$<%= r.price_range %></p>

</div>
<% end %>
