<h1>Restaurants</h1>

<!-- Shows a link to the user index page if a user is logged in.  -->
<% if current_user %>
<%= link_to "My Profile", users_path%> <br>
<% end %>
<br>

<div class="navi_c">
<% @categories.each do |c| %>
<div class="nav_category">
  <%= link_to "#{c.name}", category_path(c.id) %>
</div>
<% end %>
<div class="nav_category">
  <%= link_to "See More", categories_url %>
</div>
</div>

<div class="list_r">
  <%= form_tag(restaurants_path, :method => "get") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Restaurants" %>
      <%= submit_tag "Search" %>
    </div>
  <% end %>


  <% if @restaurant_search != nil %>
    <% @restaurant_search.each do |r| %>
      <b>
        <div class="search-results">
          Restaurant Name: <%= link_to "#{r.name}", restaurant_path(r.id) %><br>
          <%= r.address %> <br>
          <%= r.summary %> <br>
          <%= r.open_hour %> am -<%= r.close_hour %> pm<br>

          <p>$<%= r.price_range %></p>
        </div>
      </b>
    <% end %>
  <% end %>


<% @restaurants.each do |r| %>
<div class="list_restaurants">
  Restaurant Name: <%= link_to "#{r.name}", restaurant_path(r.id) %><br>
  <%= r.address %> <br>
  <%= r.summary %> <br>
  <%= r.open_hour %> am -<%= r.close_hour %> pm<br>

  <p>$<%= r.price_range %></p>

</div>
<% end %>
</div>
